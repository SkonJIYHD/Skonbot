modules = ["bash", "nix", "nodejs-20"]
run = "node index.mjs"

[nix]
channel = "stable-24_05"
packages = ["via"]

[deployment]
run = ["sh", "-c", "node index.mjs"]

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]

[[workflows.workflow]]
name = "bot"
mode = "sequential"
author = 43112388

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.mjs"

[[workflows.workflow]]
name = "Run"
mode = "sequential"
author = 43112388

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "bot"
